         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="86.0" layoutY="137.0" prefHeight="40.0" prefWidth="236.0" promptText="Tên đăng nhập" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;" />
      <PasswordField fx:id="passwordField" layoutX="86.0" layoutY="214.0" prefHeight="40.0" prefWidth="236.0" promptText="Mật khẩu" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;" />
